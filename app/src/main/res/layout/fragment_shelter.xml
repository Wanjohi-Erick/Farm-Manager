<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_background"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".ui.shelter.ShelterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Shelter Details"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/title_size"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:id="@+id/shelterLocationEdit"
        android:inputType="text"
        android:padding="@dimen/margin"
        android:hint="Location"
        android:background="@drawable/edit_text_background"
        android:layout_margin="@dimen/margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:id="@+id/shelterSizeEdit"
        android:inputType="number"
        android:hint="Size"
        android:padding="@dimen/margin"
        android:background="@drawable/edit_text_background"
        android:layout_margin="@dimen/margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:id="@+id/shelterConditionEdit"
        android:inputType="text"
        android:hint="Condition"
        android:padding="@dimen/margin"
        android:background="@drawable/edit_text_background"
        android:layout_margin="@dimen/margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:id="@+id/shelterPurposeEdit"
        android:inputType="text"
        android:hint="Purpose"
        android:padding="@dimen/margin"
        android:background="@drawable/edit_text_background"
        android:layout_margin="@dimen/margin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recordLandDetailsBtn"
        android:text="record"
        android:layout_margin="@dimen/margin"/>

</LinearLayout>